<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_30"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_30"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="@dimen/dp_15"
    android:tag="layout/item_detail_list_0"
    app:cardCornerRadius="@dimen/dp_10">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/textBold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_35"
                    android:layout_marginEnd="@dimen/dp_35"
                    android:gravity="center"
                    android:fontFamily="@font/tirotamilregular"
                    android:text="Life is the flower for which love is the honey"
                    android:textSize="@dimen/sp_22" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:background="@color/colorBackGroundShape"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/llEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@color/colorCopy"
                    android:layout_marginLeft="@dimen/dp_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/edit"
                    android:textColor="@color/colorCopy"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/llDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:src="@android:drawable/ic_delete"
                    app:tint="@color/colorShare"
                    android:layout_marginLeft="@dimen/dp_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/delete"
                    android:textColor="@color/colorShare"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
